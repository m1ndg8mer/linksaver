%h1 My Links
= link_to 'Create', new_link_path, class: 'btn btn-success'
%hr

.table-responsive
  %table.table.table-bordered.table-hover
    %tr.active
      %th
        %h4.text-center Href
      %th
        %h4.text-center Description
      %th
        %h4.text-center Tags
      %th
        %h4.text-center Created
      %th{colspan: 3}
        %h4.text-center Actions
    = render @links
= render partial: 'shared/empty_list_alert', locals: { collection: @links }